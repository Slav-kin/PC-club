<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20" Background="{DynamicResource SideMenuPrimaryBackground}">
      <!-- Add Controls for Previewer Here -->
       <Button Content="Hello" HorizontalAlignment="Stretch"></Button>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
    <Style Selector="Button">
        <Setter Property="FontSize" Value="14"></Setter>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryText}"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ButtonHover}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource SecondTextHover}"></Setter>
    </Style>

    <Style Selector="Button.nav">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

<Style Selector="Button.Active /template/ ContentPresenter">
    <Setter Property="Background" Value="#6A5ACD" />
    <Setter Property="Foreground" Value="White" />
</Style>

<Style Selector="Button.Active:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#7B68EE" />
    <Setter Property="Foreground" Value="White" />
</Style>
</Styles>
    